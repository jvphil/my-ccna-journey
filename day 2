/************* routing ***************/

static routing
formula: ip route destination_network net_mask next_hop 

@r1
ip route 10.1.1.5 255.255.255.255 10.1.1.2 <- host route
end


network route
@r2
conf t
ip route 10.1.1.8 255.255.255.252 10.1.1.6
end 




    
