ip add dhcp
end


/********************* telus_noc ************************/
50 users

config t
vlan 27
 name telus_noc 
 exit

Int vlan 27
 no shut
 ip add 10.0.0.65 255.255.255.192
ip dhcp excluded-add 10.0.0.65 10.0.0.69
ip dhcp pool telus_noc 
 network 10.0.0.64 255.255.255.192
 default-router 10.0.0.65
 domain-name telus_noc 
 dns-server 10.82.1.10
 option 150 ip 10.82.100.8
 end
 
@d2Access
conf t
int e1/0
  swi access vlan 27
  do sh ip dhcp binding
end

@s2
conf t
int e1/0
no shut
ip add dhcp
end



